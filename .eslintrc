{
    "env": {
        "mocha": true
    },
    "extends": "airbnb",
    "rules": {
        "comma-dangle": [2, "never"],
        "func-names": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "indent": [2, 4, {"SwitchCase": 1}],
        "max-len": [2, 140],
        "no-bitwise": 0,
        "no-labels": 0,
        "no-nested-ternary": 0,
        "no-param-reassign": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "one-var": 0,
        "object-curly-spacing": [2, "never"],
        "space-before-function-paren": [2, "always"]
    }
}
